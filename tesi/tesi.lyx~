\end_layout

\end_inset


\end_layout

\begin_layout Chapter
\begin_inset CommandInset label
LatexCommand label
name "cha:Implementazione"

\end_inset

Implementazione
\end_layout

\begin_layout Standard
\begin_inset ERT
